    <script>
        function scrollToService(serviceId) {
    const element = document.getElementById(serviceId);
    element.scrollIntoView({ behavior: 'smooth', block: 'start' });
}

function toggleDetails(serviceId, detailId) {
    const allServices = document.querySelectorAll('.service-subsection');
    const allDetails = document.querySelectorAll('.service-details');
    const details = document.getElementById(detailId);
    
    // Hide all other services and close any open details
    allServices.forEach(item => {
        if (item.id !== serviceId) {
            item.classList.add('hide-other'); // Fade out other services
        } else {
            item.classList.remove('hide-other'); // Keep the clicked service visible
        }
    });

    // Close all other details that are open
    allDetails.forEach(detail => {
        if (detail !== details) {
            detail.classList.remove('show-details');
        }
    });

    // Toggle the visibility of the clicked service's details
    if (details.classList.contains('show-details')) {
        // Close details if already open
        details.classList.remove('show-details');
        // Show all other services again
        allServices.forEach(item => {
            item.classList.remove('hide-other');
        });
    } else {
        // Open the clicked details
        details.classList.add('show-details');
    }
}




